ENVIRONMENT=development
DEBUG=true

# Use 'postgres' for Docker, 'localhost' for local
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=your_database_user
POSTGRES_PASSWORD=your_secure_password
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10


# pgAdmin
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password

# Airflow Database (separate from application database)
AIRFLOW_DB=airflow_db

# Airflow Security
AIRFLOW_FERNET_KEY=your_fernet_key_here
AIRFLOW_WEBSERVER_SECRET_KEY=your_webserver_secret_key_here
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=your_airflow_admin_password

NGX_URL=https://www.african-markets.com/en/stock-markets/ngse/listed-companies
YAHOO_TICKERS=TICKER1.L,TICKER2.L
REQUEST_TIMEOUT=30
MAX_RETRIES=5


# =============================================================================
# ALERT THRESHOLDS
# =============================================================================
ALERT_PRICE_WARNING=4.0
ALERT_PRICE_CRITICAL=8.0
ALERT_VOLATILITY_MULT=2.0
ALERT_VOLUME_MULT=2.5
ALERT_RSI_OVERSOLD=30.0
ALERT_RSI_OVERBOUGHT=70.0

# =============================================================================
# NOTIFICATION SETTINGS - EMAIL
# =============================================================================
# Enable/disable email notifications
NOTIFICATION_EMAIL_ENABLED=true

# SMTP Server Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
# Email Addresses
NOTIFICATION_FROM_EMAIL=alerts@example.com
NOTIFICATION_EMAILS=recipient@example.com
# =============================================================================
# NOTIFICATION SETTINGS - SLACK
# =============================================================================
# Enable/disable Slack notifications
NOTIFICATION_SLACK_ENABLED=false

# Slack Webhook URL (get from Slack app configuration)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# FILE PATHS
# =============================================================================
DATA_RAW_PATH=/app/data/raw
DATA_PROCESSED_PATH=/app/data/processed
LOGS_PATH=/app/logs
REPORTS_PATH=/app/reports
# Use '/app' for Docker, '/home/Stock_pipeline' for local
PROJECT_ROOT=/app

# =============================================================================
# NOTES
# =============================================================================
# - For Gmail SMTP, you need to create an "App Password" in your Google Account
# - Slack webhook URL can be obtained by creating an "Incoming Webhook" app
# - Multiple email recipients should be comma-separated
# - Keep this file secure and never commit .env to version control
