# =============================================================================
# STOCK PIPELINE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and customize the values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=stock_pipeline
DB_USER=stockpipeline
DB_PASSWORD=your_secure_password_here

# =============================================================================
# DATA SOURCES
# =============================================================================
# Yahoo Finance API
YAHOO_FINANCE_ENABLED=true

# Alpha Vantage API
ALPHA_VANTAGE_ENABLED=false
ALPHA_VANTAGE_API_KEY=your_api_key_here

# SEC EDGAR API
SEC_EDGAR_ENABLED=false
SEC_USER_AGENT=your_company_name your_email@example.com

# =============================================================================
# ALERT THRESHOLDS
# =============================================================================
ALERT_PRICE_WARNING=4.0
ALERT_PRICE_CRITICAL=8.0
ALERT_VOLATILITY_MULT=2.0
ALERT_VOLUME_MULT=2.5
ALERT_RSI_OVERSOLD=30.0
ALERT_RSI_OVERBOUGHT=70.0

# =============================================================================
# NOTIFICATION SETTINGS - EMAIL
# =============================================================================
# Enable/disable email notifications
NOTIFICATION_EMAIL_ENABLED=true

# SMTP Server Configuration (Gmail example)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Email Addresses
NOTIFICATION_FROM_EMAIL=alerts@stockpipeline.com
NOTIFICATION_EMAILS=recipient1@example.com,recipient2@example.com

# =============================================================================
# NOTIFICATION SETTINGS - SLACK
# =============================================================================
# Enable/disable Slack notifications
NOTIFICATION_SLACK_ENABLED=false

# Slack Webhook URL (get from Slack app configuration)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =============================================================================
# FILE PATHS
# =============================================================================
DATA_RAW_PATH=/app/data/raw
DATA_PROCESSED_PATH=/app/data/processed
LOGS_PATH=/app/logs
REPORTS_PATH=/app/reports

# =============================================================================
# NOTES
# =============================================================================
# - For Gmail SMTP, you need to create an "App Password" in your Google Account
# - Slack webhook URL can be obtained by creating an "Incoming Webhook" app
# - Multiple email recipients should be comma-separated
# - Keep this file secure and never commit .env to version control
